<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.TagFu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/videoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/profile_banner" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/uploadback" />
    </RelativeLayout>

    <com.wTagFuui.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/twitter_bg_color"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/smallmargin"
        android:paddingLeft="@dimen/margin"
        android:paddingTop="@dimen/smallmargin"
        android:text="@string/share_to"
        android:textColor="@color/white"
        android:textSize="@dimen/username_text_size"
        foo:customFont="@string/app_bold_font_name" />

    <RelativeLayout
        android:id="@+id/fbshare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharefacebook" />

        <com.woTagFui.CustomTextView
            android:id="@+id/textfb"
            style="@style/socialSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fb"
            android:text="@string/facebook"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/twittershare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharetwitter" />

        <com.wooTagFu.CustomTextView
            android:id="@+id/texttwitter"
            style="@style/socialSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/twitter"
            android:text="@string/twitter"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/googleshare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/gplusshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharegoogleplus" />

        <com.wootTagFuCustomTextView
            style="@style/socialSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gplusshare"
            android:text="@string/google"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/wootaTagFu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin"
        android:visibility="gone">

        <Button
            android:id="@+id/wootagTagFu        android:layout_width="
            wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
        android:background="@drawable/sharewootag"TagFu

        <com.wootag.uTagFuomTextView
            style="@style/socialSiteTextView"
            TagFu
            TagFu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/wootag"
            android:text="@string/wootag"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/mailshare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/sharemail" />

        <com.wootag.ui.CTagFuextView
            style="@style/socialSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mail"
            android:text="@string/mail"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/contactshare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/contact" />

        <com.wootag.ui.CustomTextView
            style="@style/socialSiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/contact"
            android:text="@string/contact"
            foo:customFont="@string/app_bold_font_name" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lineheight"
        android:background="@color/twitter_bg_color"
        android:visibility="visible" />

</LinearLayout>