<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.wootag"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/bitmapLay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp" >

        <RelativeLayout
            android:id="@+id/instructionLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:alpha="0.7"
            android:background="@color/black" >

            <ImageView
                android:id="@+id/closehelptool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/close" />

            <com.wootag.ui.CustomTextView
                android:id="@+id/instructiontext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/create_a_tag_anytime_during_the_video_click_on_the_tag_tool"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                foo:customFont="@string/app_bold_font_name" />

            <LinearLayout
                android:id="@+id/dots"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instructiontext"
                android:background="@null"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_enable" />

                <ImageView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_disable" />

                <ImageView
                    android:id="@+id/third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_disable" />

                <ImageView
                    android:id="@+id/fourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_disable" />

                <ImageView
                    android:id="@+id/fifth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_disable" />

                <ImageView
                    android:id="@+id/sixth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/breadcrumb_disable" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/tagarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:src="@drawable/arrow2" />

        <ImageView
            android:id="@+id/tagexpressionarrow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/instructionLayout"
            android:layout_marginLeft="80dp"
            android:background="@drawable/arrow3" />

        <ImageView
            android:id="@+id/linkarrow"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/instructionLayout"
            android:layout_marginLeft="100dp"
            android:background="@drawable/linkarrow" />

        <ImageView
            android:id="@+id/publisharrow"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/instructionLayout"
            android:layout_marginRight="50dp"
            android:background="@drawable/arrow4" />

        <ImageView
            android:id="@+id/fbarrow"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/instructionLayout"
            android:layout_marginRight="120dp"
            android:background="@drawable/arrow4" />
    </RelativeLayout>

</RelativeLayout>
