<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laythree"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rLaythree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/tagLinkButtonthree"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/link_background"
            android:orientation="vertical"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/threeupperLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/threelowerLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/markerImagethree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagLinkButtonthree"
            android:src="@drawable/bluethird" />

        <Button
            android:id="@+id/btnthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginLeft="@dimen/small"
            android:layout_toRightOf="@+id/markerImagethree"
            android:background="@drawable/recyclebin" />

        <LinearLayout
            android:id="@+id/butnLythree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
             android:layout_below="@+id/tagLinkButtonthree"
             android:layout_marginTop="@dimen/smallmargin"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/fbthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tagbuttonsmargin"
                android:background="@drawable/tag_facebook_f" />

            <Button
                android:id="@+id/gplusthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tagbuttonsmargin"
                android:background="@drawable/tag_googleplus_f" />

            <Button
                android:id="@+id/twitterthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tagbuttonsmargin"
                android:background="@drawable/tag_twitter_f" />

            <Button
                android:id="@+id/wootagthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tagbuttonsmargin"
                android:background="@drawable/tag_wootag_f" 
                android:visibility="gone"/>
            
             <Button
                android:id="@+id/linkthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tagbuttonsmargin"
                android:background="@drawable/weblink" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>