<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.wootag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/custom_border"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/smallmargin"
        android:visibility="gone" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/delteVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:padding="@dimen/optionspadding"
            android:text="@string/delete"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/delteVideo"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/updateAccessPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/smallmargin"
        android:visibility="gone" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/accesspermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:padding="@dimen/optionspadding"
            android:text="@string/access_permission"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/accesspermission"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/reportVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:padding="@dimen/optionspadding"
            android:text="@string/report_inappropriate"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/reportVideo"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/ShareVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/optionspadding"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ShareVideo"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/copysahreurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/copyURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/optionspadding"
            android:text="@string/copy_share_url"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/copyURL"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/tagVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/optionspadding"
            android:text="@string/tag"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tagVideo"
            android:layout_marginTop="@dimen/small"
            android:background="@color/twitter_bg_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <com.wootag.ui.CustomTextView
            android:id="@+id/cancelOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/optionspadding"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            foo:customFont="@string/app_font_name" />
    </RelativeLayout>

</LinearLayout>