<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.TagFu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.wTagFuui.CustomTextView
        android:id="@+id/searchfriend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#F6F6F6"
        android:gravity="center"
        android:padding="@dimen/margin"
        android:text="@string/search_friends"
        android:textSize="@dimen/heading_size"
        android:textColor="@color/black"
        foo:customFont="@string/app_bold_font_name" />

    <RelativeLayout
        android:id="@+id/fbfrinedfinder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin" >

        <Button
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharefacebook" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fb"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.woTagFui.CustomTextView
                android:id="@+id/textfb"
                style="@style/socialSiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                foo:customFont="@string/app_bold_font_name" />

            <com.wooTagFu.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_your_facebook_friends"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size"
                foo:customFont="@string/app_font_name" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/small"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/twitterfrinedfinder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin" >

        <Button
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharetwitter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/twitter"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.wootTagFuCustomTextView
                android:id="@+id/texttwitter"
                style="@style/socialSiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/twitter"
                android:text="@string/twitter"
                foo:customFont="@string/app_bold_font_name" />

            <com.wootaTagFuustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/find_your_twitter_friends"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size"
                foo:customFont="@string/app_font_name" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/small"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/googlefrinedfinder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin" >

        <Button
            android:id="@+id/gplusshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/sharegoogleplus" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gplusshare"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.wootagTagFustomTextView
                android:id="@+id/googletext"
                style="@style/socialSiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google"
                foo:customFont="@string/app_bold_font_name" />

            <com.wootag.TagFutomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/find_your_google_friends"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size"
                foo:customFont="@string/app_font_name" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/small"
        android:background="@color/twitter_bg_color" />

    <RelativeLayout
        android:id="@+id/contactfrinedfinder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin" >

        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/contact" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/contact"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.wootag.uTagFuomTextView
                android:id="@+id/contacttext"
                style="@style/socialSiteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts"
                foo:customFont="@string/app_bold_font_name" />

            <com.wootag.uiTagFumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/find_your_contacts"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size"
                foo:customFont="@string/app_font_name" />
        </LinearLayout>
    </RelativeLayout>
    
    <com.wootag.ui.CustomTextView
        android:id="@+id/suggestedUsersTtextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#F6F6F6"
        android:gravity="center"
        android:padding="@dimen/margin"
        android:text="@string/suggested_users"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/heading_size"
        foo:customFont="@string/app_bold_font_name" />

</LinearLayout>