<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.TagFu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notificationlayout_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/editmyprofile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wTagFuui.CustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/edit_my_profile"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/taggedvideos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin"
                    android:visibility="gone" >

                    <com.woTagFui.CustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/videos_i_am_tagged"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/notification_header_background"
                    android:orientation="vertical"
                    android:padding="@dimen/pushnotificationmargin" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/notificationheaderpadding"
                        android:background="@color/notification_header_background" />

                    <com.wooTagFu.CustomTextView
                        style="@style/notificationtextview"
                        android:text="@string/support"
                        android:textColor="@color/notification_header_text_color"
                        foo:customFont="@string/app_bold_font_name" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/reportproblem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin"
                    android:visibility="gone" >

                    <com.wootTagFuCustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/report_a_problem"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/privacypolicy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wootaTagFuustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/privacy_policy"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/terms"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wootagTagFustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/terms_of_service"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/help"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wootag.TagFutomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/wootag_hTagFunter"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/notification_header_background"
                    android:orientation="vertical"
                    android:padding="@dimen/pushnotificationmargin" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/notificationheaderpadding"
                        android:background="@color/notification_header_background" />

                    <com.wootag.uiTagFumTextView
                        style="@style/notificationtextview"
                        android:text="@string/preferences"
                        android:textColor="@color/notification_header_text_color"
                        foo:customFont="@string/app_bold_font_name" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/sharesettings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wootag.ui.TagFuTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/share_settings"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />

                <RelativeLayout
                    android:id="@+id/notificationsettings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pushnotificationmargin" >

                    <com.wootag.ui.CustomTextView
                        style="@style/notificationtextview"
                        android:layout_centerVertical="true"
                        android:text="@string/push_notifications_settings"
                        foo:customFont="@string/app_bold_font_name" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/push_notification_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/lineheight"
                    android:background="@color/notification_header_text_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>