<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.TagFu"
    android:id="@+id/aboutuser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/exitfbfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/close" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/userbannerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/facebook_header"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/userbannerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/facebook_b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tag_layout_bg_color"
            android:orientation="vertical"
            android:padding="@dimen/margin" >

            <RelativeLayout
                android:id="@+id/lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/smallmargin" >

                <RelativeLayout
                    android:id="@+id/profileRR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/layout_background" />

                    <com.wTagFuui.RoundedImageView
                        android:id="@+id/ownerimage"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/member" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/smallmargin"
                    android:layout_toRightOf="@+id/profileRR"
                    android:orientation="vertical" >

                    <com.woTagFui.CustomTextView
                        android:id="@+id/ownfbname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sanjay"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        foo:customFont="@string/app_bold_font_name" />

                    <com.wooTagFu.CustomTextView
                        android:id="@+id/lastseen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="@string/last_seen_9_feb_2014"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        foo:customFont="@string/app_bold_font_name" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/socialIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sharefacebook" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/smallmargin"
                android:orientation="vertical" >

                <com.wootTagFuCustomTextView
                    android:id="@+id/recentupdates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:text="@string/recent_updates"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    foo:customFont="@string/app_bold_font_name" />

                <com.wootaTagFuustomTextView
                    android:id="@+id/recentupdatestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:text="@string/watching_300_about_an_hour_ago"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"
                    foo:customFont="@string/app_bold_font_name" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin" >

                <Button
                    android:id="@+id/postonwall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/writeonurwall" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin" >

                    <ImageView
                        android:id="@+id/ownonlineimageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/smallmargin"
                        android:src="@drawable/offline" />

                    <com.wootag.ui.CustomTextView
                        android:id="@+id/ownonlinetextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/ownonlineimageview"
                        android:text="@string/online"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        foo:customFont="@string/app_bold_font_name" />
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/shareVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sharevideo" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>